<%# ソフト名を配列で格納 %>
<% soft_names = {
"第一世代" => ['赤','緑','青','ピカチュウ'],
"第二世代" => ['金','銀','クリスタル'],
"第三世代" => ['ルビー','サファイア','エメラルド'],
"第四世代" => ['ダイヤモンド','パール','プラチナ'],
"第五世代" => ['ブラック','ホワイト','ブラック2','ホワイト2'],
"第六世代" => ['X','Y'],
"第七世代" => ['サン','ムーン','ウルトラサン','ウルトラムーン'],
"第八世代" => ['ソード','シールド'],
"第九世代" => ['スカーレット','バイオレット']} %>

<div class='search-form'>
  <%= form_with url:random_result_path, method: :get, local: true do |form| %>
  <div class='main-content' >
    <%= image_tag 'hero.jpg',class: "hero-image" %>
    <div class='search-area'>
      <p>あ！　やせいの</p>
      <div class='random-submit-button'>
        <%= form.submit "？？？？？？" %>
      </div>
      <p>が　とびだしてきた！　▼</p>
    </div>
  </div>
    <%# softnamesを展開してラジオボタンを作成 %>
    <div class='random-selects'> <%# 選択肢全体 %>

      <% soft_names.each do |key,value| %>
        <div class='random-generation'><%# 選択肢（世代ごと） %>
          <%# キー（世代）を表示 %>
          <div class='ran-generation'>
            <%= form.label :selected_generation_names, key %>
            <%= form.check_box :selected_generation_names,{multiple:true} ,key,nil %>
          </div>
          <div class='ran-softs'>
            <% value.each do |soft_name| %>
            <div class='soft'>
              <span><%= soft_name %></span>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <% end %> <%# fotm_withのend %>
  
  <%# 返すステータスをソフト→世代に変える %>
  <%#= link_to 'ホームに戻る', home_path ,class:'link-button'%>
  
</div>
